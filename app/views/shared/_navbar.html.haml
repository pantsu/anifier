.navbar.navbar-fixed-top
  .navbar-inner
    .container
      .row
        .span6
          = link_to 'Anifier', root_path, class: 'brand'
          - if user_signed_in?
            %ul.nav
              %li= link_to "Releasers", releasers_path
              %li= link_to "Titles", titles_path
              %li= link_to "History", "#"
        .span3
          = form_tag root_path, method: :get, class: "navbar-search form-search" do
            .input-append
              = search_field_tag :q, params[:q], placeholder: t('search'), class: 'search-query'
              %button.btn{ type: 'submit' }
                %i.icon-search
        .span3
          .pull-right
            - if user_signed_in?
              = link_to current_user.decorate.name, root_path, class: 'current-user-link'
              = link_to destroy_user_session_path, method: :delete, class: 'btn btn-danger' do
                %i.icon-off
            - else
              %button.btn.btn-info{ data: { toggle: 'modal', target: '#sign-in-modal' }} Sign up/in
