#sign-in-modal.modal.hide.fade
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
    %h1= t('welcome')
  .modal-body
    #auth-tabs.tabbable
      %ul.nav.nav-pills
        %li.active
          %a{ data: { toggle: "tab", target: "#sign_in" }} Sign in
        %li
          %a#signup-btn{ data: { toggle: "tab", target: "#sign_up" }} Sign up
      .tab-content
        #sign_in.tab-pane.active.fade.in
          = render template: "devise/sessions/new"
        #sign_up.tab-pane.fade
          = render template: "devise/registrations/new"
  .modal-footer
    Sign in via
    = link_to user_omniauth_authorize_path(:facebook), class: 'btn' do
      = image_tag 'f_logo.png', size: '16x16'
      Facebook
    != "&nbsp;or&nbsp"
    = link_to user_omniauth_authorize_path(:github), class: 'btn' do
      = image_tag 'github_logo.png', size: '16x16'
      Github
    != "&nbsp;or even&nbsp"
    = link_to user_omniauth_authorize_path(:google_oauth2), class: 'btn' do
      = image_tag 'google_logo.png', size: '16x16'
      Google
