- if user_signed_in?
  .dashboard
    .row.dashboard-search
      = form_tag "#", class: "navbar-search pull-right" do
        = text_field_tag :search, nil, class: "search-query"
        = submit_tag "Search", class: "btn"

    .row
      .dashboard-unit.span5= render "shared/watched_releases", releases: @releases
      .dashboard-unit.span5.pull-right= render "shared/new_releases", releases: @releases

    .row
      .dashboard-unit.construct.span12
        %h2 Fuck your list, I will construct myself!
        = form_tag "#", class: "dashboard-unit-inner .form-inline" do
          = select :releaser, "id", @releasers.collect {|r| [r.name, r.id]}, include_blank: 'Releaser'
          = autocomplete_field_tag :title, nil, autocomplete_title_name_titles_path, placeholder: "Title (autocomplete)"
          = select "resolution", "resolution", @resolutions, include_blank: 'Resolution'
          = submit_tag "Construct!", class: "btn btn-inverse dashboard-submit"




- else
  .hero-unit
    %h1 Anifier
    %h3 Get your favorite anime releases instantly in one place.
    %p Have some patience. We working hard right now.
    .row
      = render 'shared/unauth_dash'
